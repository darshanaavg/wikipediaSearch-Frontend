<div class="container overflow-hidden text-center">
  <div class="row">
    <div class="col-6">
      <span class="fs-7">Move wikipedia contents to ES</span>
      <form class="form">
        {{#if success}}
        <div class="alert alert-success">
          <strong>Success!</strong> Contents have been moved successfully..
        </div>
        {{/if}}
        <div class="input-group mb-3">
          {{input
            value=text
            name="title"
            class="form-control" 
            placeholder="Enter text"
            autocomplete='off'
          }}
          <button class="btn btn-outline-primary" type="button"
            {{action 'move'}}{{action 'getUploadedCount'}}>Move</button>

        </div>

        {{#if started}}
        <button class="btn btn-primary" type="button" disabled>
          <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
          Moving...
        </button>
        <span class="fs-7"> Moved {{uploadedCount}} pages so far</span>

        {{/if}}
      </form>
    </div>
    <div class="col-6">
      <span class="fs-7">List of contents</span>
      <ul class="list-group d-grid gap-2 border-0 w-auto">
        {{#each model as |list|}}
        <div class="container">
          <li class="list-group-item d-flex justify-content-between align-items-center">
            {{#link-to 'contents' list.title class="content"}}
            {{list.title}}
            {{/link-to}}
            <span class="badge bg-primary rounded-pill">{{list.count}}</span>
          </li>
        </div>
        {{/each}}
      </ul>
    </div>
  </div>
</div>